{
  "name": "greencaddie",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "node server/index.js",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "quality:check": "npm run test -- --run && npm run build",
    "audit:prod": "npm audit --omit=dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "dev:full": "concurrently -n api,web -c yellow,cyan \"npm:server\" \"npm:dev\""
  },
  "dependencies": {
    "cors": "^2.8.6",
    "dexie": "^4.0.8",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "firebase": "^12.9.0",
    "framer-motion": "^12.34.3",
    "maplibre-gl": "^4.5.2",
    "mongodb": "^7.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
